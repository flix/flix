namespace TestShow {
    use Show.show;

    @test
    def testShowUnit(): Bool = show(()) == "()"

    @test
    def testShowTrue(): Bool = show(true) == "true"

    @test
    def testShowFalse(): Bool = show(false) == "false"

    @test
    def testShowString(): Bool = show("abcd") == "abcd"

    @test
    def testShowInt8(): Bool = show(123i8) == "123"

    @test
    def testShowInt16(): Bool = show(123i16) == "123"

    @test
    def testShowInt32(): Bool = show(123i32) == "123"

    @test
    def testShowInt64(): Bool = show(123i64) == "123"

    @test
    def testShowFloat32(): Bool = show(123.0f32) == "123.0"

    @test
    def testShowFloat64(): Bool = show(123.0f64) == "123.0"

    @test
    def testShowInt32List(): Bool = show(1 :: 2 :: 3 :: Nil) == "1 :: 2 :: 3 :: Nil"

    @test
    def testShowNil(): Bool = show(Nil: List[Int]) == "Nil"

    @test
    def testShowSomeInt32(): Bool = show(Some(123)) == "Some(123)"

    @test
    def testShowNone(): Bool = show(None: Option[String]) == "None"

    @test
    def testShowErr(): Bool = show(Err("error"): Result[String, String]) == "Err(error)"

    @test
    def testShowOk(): Bool = show(Ok("all good"): Result[String, String]) == "Ok(all good)"

    @test
    def testShowSuccess(): Bool = show(Success("hooray"): Validation[String, String]) == "Success(hooray)"

    @test
    def testShowNel(): Bool = show(Nel("abc", Nil)) == "abc :: Nil"

    @test
    def testShowNest01(): Bool =
        show(Some(None) :: None :: Some(Some(Ok(123))) :: Some(Some(Err(false))) :: Nil) == "Some(None) :: None :: Some(Some(Ok(123))) :: Some(Some(Err(false))) :: Nil"

    @test
    def testShowNest02(): Bool =
        show(Some(Nil) :: None :: Some(Success(true) :: Failure(Nel("zut", Nil)) :: Nil) :: Nil) == "Some(Nil) :: None :: Some(Success(true) :: Failure(zut :: Nil) :: Nil) :: Nil"

    @test
    def testShowNest03(): Bool =
        show(Nil :: (1 :: Nil) :: (1 :: 2 :: Nil) :: Nil) == "Nil :: 1 :: Nil :: 1 :: 2 :: Nil :: Nil"
}
